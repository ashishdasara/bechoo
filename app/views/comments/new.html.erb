<h2 class="col-md-offset-5 col-sm-offset-5 col-xs-offset-4 form_header">New Comment</h2>
<div class="container form_box">
<%= form_for @comment, html: {class: "form-horizontal center"} do |f| %>
  <div class="form-group">
    <%= f.label :text, "text", class: "col-md-4 control-label" %>
    <div class="col-md-4">
      <%= f.text_field :text, placeholder: "leave a comment", class: "form-control" %>
    </div>
  </div>
  
  <%= f.hidden_field :user_id,value: current_user.id, class: "form-control" %>
  <%= f.hidden_field :advertisement_id,value: @advertisement.id, class: "form-control" %>

  <div class="form-group">
    <div class="col-md-offset-4">
      <%= f.submit "Submit", class: "btn" %>
    </div>
  </div>

<% end %>
</div>
