<div class="container-fluid menu_box">
  <div class="dropdown">
    <h3>
      <%= link_to(new_advertisement_path) do%>
        <span class="glyphicon glyphicon-tag"></span>
        Post Ad
      <% end %>
    </h3>
    <% if user_signed_in? %>
      <h3 data-toggle="dropdown">
        <span class="glyphicon glyphicon-user"></span>
        <%= current_user.first_name.capitalize %> <%= current_user.last_name.capitalize%>
      </h3>
      <h3>
        <%= link_to carts_path do%>
        <span class="glyphicon glyphicon-shopping-cart"></span> Cart(<%= Cart.find(session[:cart_id]).cart_products.size %>)
        <% end %>
      </h3>
      <ul class="dropdown-menu">
        <li class="text-center"> <%= link_to "Home", advertisements_path %> </li>
        <li class="text-center"><%= link_to("My Conversations", conversations_path) %> </li>
        <% if current_user.advertisements.size != 0 %>
        <li class="text-center"> <%= link_to "Show your Ads", view_advertisements_path %> </li>
        <% end %>
        <li class="text-center"> <%= link_to "Show Profile", user_path(@current_user.id) %></li>
        <li class="text-center"><%= link_to "Logout", logout_path %></li>
      </ul>

    <% else %>
      <h3>
        <span class="glyphicon glyphicon-user"></span>
        <%= link_to("Login", login_path) %>
      </h3>

    <% end %>
  </div>
</div>
