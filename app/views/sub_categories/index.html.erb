<%= link_to(" Category", categories_path, :class => 'add-link') %>

<table class="listing" summary="Subject list">
<%= link_to("Add Subcategory", new_sub_category_path(:category_id => @category.id), :class => 'action add') %>
  <tr class="header">
    <th>Name</th>
    <th>Actions</th>
  </tr>
  <% @sub_categories.each do |sub_category| %>
  <tr>
    <td><%= sub_category.name %></td>
    <td>
      <%= link_to("Delete sub-category", delete_sub_category_path(sub_category, :category_id => @category.id ), :class => 'action delete') %>
      <td><%= link_to( 'Delete', sub_category_path(sub_category, :category_id => @category.id), method: :delete, data: {confirm: "are you sure?"} ) %></td>

    </td>
  </tr>
  <% end %>
</table>
