<div class="categories delete">
  <h2>Delete category</h2>

  <%= form_for(@category, :method => 'delete') do |category| %>

    <p>Are you sure you want to permanently delete this category?</p>

    <p class="reference-name"><%= category.object.name %></p>

    <div class="form-buttons">
      <%= category.submit("Delete category") %>
    </div>

  <% end %>
</div>
