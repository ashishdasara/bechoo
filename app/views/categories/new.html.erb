<%= link_to("Back to list", categories_path, :class => 'add-link') %>
<div class="categories new">
  <h2>Add new categories</h2>
  <%= form_for(@category, :url => categories_path, :method => "post") do |f| %>
    <table summary = "Category form">
      <tr>
        <th>Category Name</th>
        <td><%= f.text_field(:name) %></td>
      </tr>
    </table>
    <div class="form-buttons">
      <%= f.submit("Create Category") %>
    </div>
  <% end %>
</div>
